<div class="container">
  <p id="notice"></p>
  <div>
    <% if @book.errors.any? %>
      <p><%= @book.errors.count %> error prohibited this obj from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <%= render 'users/profile', user: current_user %>
      <h2>New book</h2>
        <%= render 'books/newform', book: @book %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <!--books一覧 -->
      <%= render partial:'books/index', collection: @books, as: :book %>
    </div>
  </div>
</div>